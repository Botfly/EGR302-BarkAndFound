<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pet_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#3300ff00"
    tools:context="com.example.botfly.petscanner.PetList">


    <Button
        android:id="@+id/button5"
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginBottom="48dp"
        android:onClick="petlistBackButton"
        />

    <Button
        android:id="@+id/button6"
        android:text="To info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="200dp"
        android:layout_marginBottom="48dp"
        android:onClick="petlistToInfoButton"
        />

    <Button
        android:id="@+id/registered_pet1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registered Pet: 1"
        android:layout_above="@+id/registered_pet2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/registered_pet2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registered Pet: 2"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/registered_pet3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registered Pet: 3"
        android:layout_above="@+id/button5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="57dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/registered_pet_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registered Pet List"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_above="@+id/registered_pet1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp" />

</RelativeLayout>

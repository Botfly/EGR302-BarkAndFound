<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_log_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3300ff00"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.botfly.petscanner.LogIn">
    <!--*********************************************************************************************-->
    <!--app logo: -->
    <ImageView
        android:id="@+id/imageView_AppLogo"
        android:layout_width="90dp"

        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo"

        />

    <!--Bark And Found: -->
    <TextView
        android:id="@+id/textView_appNameLogInScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="Bark and Found" />

    <!--Username Text Field: -->
    <EditText
        android:id="@+id/email_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="200dp"
        android:ems="10"
        android:hint="email / username"
        android:imeOptions="actionDone"
        android:inputType="textEmailAddress"
        android:textAlignment="center" />

    <!--Username Background: -->
    <View
        android:id="@+id/view"
        android:layout_width="215dp"
        android:layout_height="42.5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:background="#334E4B4F" />

    <!--Password Text Field: -->
    <EditText
        android:id="@+id/pass_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="260dp"
        android:ems="10"
        android:hint="password"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:textAlignment="center" />

    <!--Password Background: -->
    <View
        android:id="@+id/view1"
        android:layout_width="215dp"
        android:layout_height="42.5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="260dp"
        android:background="#334E4B4F" />

    <!--Log-in Button: -->
    <Button
        android:id="@+id/Button_LogIn"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"

        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="310dp"
        android:onClick="loginClicked"
        android:text="Log In"
        android:textColor="#000000" />

    <!--Sign Up: -->
    <Button
        android:id="@+id/Button_SignUp"
        android:layout_width="90dp"
        android:layout_height="35dp"

        android:layout_alignLeft="@+id/imageView_AppLogo"
        android:layout_alignStart="@+id/imageView_AppLogo"
        android:layout_below="@+id/Button_LogIn"
        android:layout_marginTop="10dp"
        android:onClick="signUpClicked"
        android:text="Sign Up"
        android:textColor="#000000"
        android:textSize="12sp" />

    <!--Forgot Password?: -->
    <Button
        android:id="@+id/Button_ForgotPassword"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="400dp"

        android:onClick="forgotPasswordClicked"
        android:text="Forgot Password?"
        android:textColor="#000000"
        android:textSize="12sp" />

</RelativeLayout>

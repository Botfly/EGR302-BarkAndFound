<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_log_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.botfly.petscanner.LogIn">
<!--*********************************************************************************************-->
    <!--app logo: -->
    <ImageView
        android:id="@+id/imageView_AppLogo"
        android:src="@drawable/desktop2"

        android:layout_centerHorizontal="true"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"

        />

    <!--Bark And Found: -->
    <TextView
        android:id="@+id/textView"
        android:text="Bark And Found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        />

    <!--Username Text Field: -->
    <EditText
        android:id="@+id/editText_username"
        android:hint="email / username"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        />

    <!--Username Background: -->
    <View
        android:id="@+id/view"
        android:layout_width="215dp"
        android:layout_height="42.5dp"
        android:background="#334E4B4F"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        />

    <!--Password Text Field: -->
    <EditText
        android:id="@+id/editText_password"
        android:hint="password"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="260dp"
        android:layout_centerHorizontal="true"
        />

    <!--Password Background: -->
    <View
        android:id="@+id/view2"
        android:layout_width="215dp"
        android:layout_height="42.5dp"
        android:background="#334E4B4F"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="260dp"
        />

    <!--Log-in Button: -->
    <Button
        android:id="@+id/Button_LogIn"

        android:textColor="#006400"
        android:text="Log In"
        android:backgroundTint="#6600ff00"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="310dp"
        android:layout_centerHorizontal="true"
        android:onClick="loginClicked" />

    <!--Sign Up: -->
    <Button
        android:id="@+id/Button_SignUp"
        android:text="Sign Up"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:textSize="12sp"
        android:layout_marginTop="390dp"
        android:layout_centerHorizontal="true"
        android:onClick="signUpClicked"
        />

    <!--Forgot Password?: -->
    <Button
        android:id="@+id/Button_ForgotPassword"
        android:text="Forgot Password?"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:textSize="12sp"
        android:layout_marginTop="430dp"
        android:layout_centerHorizontal="true"
        android:onClick="forgotPasswordClicked"
        />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_scanner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#3300ff00"
    tools:context="com.example.botfly.petscanner.Scanner"
    tools:showIn="@layout/activity_scanner">

    <Button
        android:id="@+id/scannerLoginButton"
        android:text="Log In"
        android:backgroundTint="#6600ff00"
        android:textColor="#006400"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="6dp"
        android:onClick="scannerLogInButton"
        />

    <Button
        android:id="@+id/scannerQRscanButton"
        android:text="Scan QR Code"
        android:textColor="#ff0000"
        android:backgroundTint="#44ff0000"

        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:onClick="scannerQRscanClicked"
        />

    <Button
        android:id="@+id/scannerRegisterButton"
        android:text="Register"
        android:backgroundTint="#6600ffff"
        android:textColor="#0000ff"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="235dp"
        android:layout_marginBottom="6dp"
        android:onClick="scannerRegisterButton"
        />

</RelativeLayout>
